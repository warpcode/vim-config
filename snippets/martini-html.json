{
    "if": {
        "prefix": "if",
        "body": [
            "%if(${1:variable})",
            "\t$2",
            "%endif()"
        ],
        "description": "Martini HTML - Defines an if statement"
    },
    "ife": {
        "prefix": "ife",
        "body": [
            "%if(${1:variable})",
            "\t$2",
            "%else()",
            "\t$3",
            "%endif()"
        ],
        "description": "Martini HTML - Defines an if/else statement"
    },
    "ifi": {
        "prefix": "ifi",
        "body": [
            "%if(${1:variable})$2%endif()"
        ],
        "description": "Martini HTML - Defines an inline if statement",
        "scope": "text.html"
    },
    "ifei": {
        "prefix": "ifei",
        "body": [
            "%if(${1:variable})$2%else()%3%endif()"
        ],
        "description": "Martini HTML - Defines an inline if/else statement"
    },
    "section": {
        "prefix": "section",
        "body": [
            "%section(${1:section_name})",
            "\t$2",
            "%endsection(${1:section_name})"
        ],
        "description": "Martini HTML - Defines an section statement"
    },
    "escape": {
        "prefix": "escape",
        "body": [
            "%escape(${1:variable})"
        ],
        "description": "Martini HTML - Defines an escape statement"
    },
    "escapejs": {
        "prefix": "escapejs",
        "body": [
            "%escapejs(${1:variable})"
        ],
        "description": "Martini HTML - Defines an escapejs statement"
    },
    "raw": {
        "prefix": "raw",
        "body": [
            "%raw(${1:variable})"
        ],
        "description": "Martini HTML - Defines an raw statement"
    }
}
