set nowrap              " wrap overlong lines
set scrolljump=1        " scroll one line at a time
set scrolloff=999       " Keep cursor in the vertical middle of the screen
set sidescrolloff=15
set sidescroll=1

" move vertically by visual line (ie will go into a wrapped line that's
" visually on the next line)
nnoremap j gj
nnoremap k gk
